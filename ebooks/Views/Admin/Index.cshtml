@model ebooks.Models.Users;

@{
    ViewData["Title"] = "Index";
}
<div class="main-div">
<h1>Admin</h1>

<h4>Login</h4>
    @if (ViewBag.Result != null)
    {
        <div class="alert alert-block alert-success" style=" color: darkred;" id="nameError">
            @ViewBag.Result
        </div>

    }
<hr />
<div class="row align-content-center">
        <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="UserName" class="control-label">Username</label>
                <input name="UserName" id="UserName" class="form-control" type="text" required />
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input name="Password" id="Password" class="form-control" type="password" required />
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-sm book-btn" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
</div>