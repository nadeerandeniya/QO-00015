
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;
@{
    ViewData["Title"] = "Index";
    ViewData["UserRole"] = "Admin";
    ViewData["Username"] = HttpContextAccessor.HttpContext.Session.GetString("_Name");
}
<div class="main-div">
<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Sales Date
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Payment Method
            </th>
            <th>
                Total Price
            </th>
            <th>
               Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in ViewBag.salesdata)
            {
        <tr>
            <td>
                @item.SalesDate
            </td>
            <td>
                @item.Fullname
            </td>
            <td>
                @item.PaymentMethod
            </td>
            <td>
                @item.TotalPrice
            </td>
            <td>
                @item.Status
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.SalesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalesId">Cancel</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>